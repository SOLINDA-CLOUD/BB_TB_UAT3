<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_production_inherit_sample_form" model="ir.ui.view">
        <field name="name">mrp.production.inherit.sample.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="solinda_mrp.mrp_production_inherit_supplier_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='purchase_id']" position="attributes">
                  <attribute name="attrs">{'invisible':[('purchase_id','=', False)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='sales_order_id']" position="attributes">
                  <attribute name="attrs">{'invisible':[('sales_order_id','=', False)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='purchase_id']" position="before">
                <field name="is_sample" readonly="1" attrs="{'invisible': [('is_sample', '=', False)]}"/>
                <field name="purchase_request_id" readonly="1" attrs="{'invisible': [('purchase_request_id', '=', False)]}"/>
            </xpath>

             <xpath expr="//notebook/page/field/tree/button[@name='create_po']" position="attributes">
                <attribute name="attrs">{'invisible':[('is_available','=', True)]}</attribute>
            </xpath>

            <xpath expr="//notebook/page/field/tree/field[@name='purchase_id']" position="before">
                <field name="is_available" invisible="1"/>
                <field name="product_qty_available" invisible="1"/>
            </xpath>

        </field>
    </record>

    <record id="mrp_production_inherit_supplier_form" model="ir.ui.view">
        <field name="name">mrp.production.inherit.supplier.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='finished_products']" position="after">
                <page name="dummy_by_roducts" string="Product Variant">
                    <field name="by_product_ids" invisible="0" attrs="{'readonly': ['|', ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}">
                        <!-- <field name="by_product_ids" invisible="0" attrs="{'readonly': ['|', ('state', '=', 'cancel'), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True)]}"> -->
                        <tree delete="0" create="0" editable="top">
                            <field name="product_id" readonly="1"/>
                            <field name="fabric_por_id" readonly="1"/>
                            <field name="lining_por_id" readonly="1"/>
                            <field name="colour" readonly="1"/>
                            <field name="size" readonly="1"/>
                            <field name="product_uom_qty" attrs="{'readonly': ['&amp;', ('parent.state', '!=', 'draft'), '|', '&amp;', ('parent.state', 'not in', ('confirmed', 'progress', 'to_close')), ('parent.is_planned', '!=', True), ('parent.is_locked', '=', True)]}"/>
                            <field name="product_minus"/>
                            <field name="product_uom_id" readonly="1"/>
                            <field name="remarks"/>
                            <field name="mrp_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

    <record id="mrp_production_sample_action" model="ir.actions.act_window">
            <field name="name">Manufacturing Orders (Sample)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.production</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="mrp.view_mrp_production_filter"/>
            <field name="context">{'search_default_todo': True, 'default_company_id': allowed_company_ids[0]}</field>
            <field name="domain">[('picking_type_id.active', '=', True),('is_sample', '=', True)]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No manufacturing order found. Let's create one.
              </p><p>
                Consume <a name="%(product.product_template_action)d" type='action' tabindex="-1">components</a> and build finished products using <a name="%(mrp.mrp_bom_form_action)d" type='action' tabindex="-1">bills of materials</a>
              </p>
            </field>
        </record>

    <menuitem action="mrp_production_sample_action"
            id="menu_mrp_production_sample_action"
            name="Manufacturing Orders (Sample)"
            parent="mrp.menu_mrp_manufacturing"
            sequence="2"/>

</odoo>

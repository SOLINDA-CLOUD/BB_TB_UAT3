<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>

    <record id="view_move_form_inherit_account" model="ir.ui.view">
      <field name="name">account.move.view.form.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">

        <xpath expr="//button[@name='action_register_payment']" position="after">
          <button name="approve_posted_bill" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}" string="Approve" groups="sol_account.additional_group_approval_bill"/>
        </xpath>

        <xpath expr="//button[@name='action_post'][2]" position="attributes">
          <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'approve'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('display_inactive_currency_warning','=',True)]}</attribute>
          <!-- <attribute name="attrs">{'invisible': ['|', '|', ('state', '!=', 'approve'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}</attribute> -->
        </xpath>

        <xpath expr="//field[@name='state']" position="attributes">
          <attribute name="statusbar_visible">draft,approve,posted</attribute>
        </xpath>
        <!-- 
        <xpath expr="//button[@name='action_register_payment']" position="attributes">
          <attribute name="attrs">{'invisible': ['|', '|', ('state', '!=', 'approve'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}</attribute>
        </xpath>

        <xpath expr="//button[@name='action_reverse']" position="attributes">
          <attribute name="attrs">{'invisible': ['|', ('move_type', 'not in', ('out_invoice', 'in_invoice')), ('state', 'not in', ('posted','approve'))]}</attribute>
        </xpath> -->

      </field>
    </record>

  </data>


</odoo>

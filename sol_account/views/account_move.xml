<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>

    <record id="view_move_form_inherit_account" model="ir.ui.view">
      <field name="name">account.move.view.form.inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">

        <xpath expr="//button[@name='action_register_payment']" position="after">
          <button name="approve_posted_bill" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', '!=', 'in_invoice')]}" string="Approve" groups="sol_account.additional_group_approval_bill"/>
          <button name="action_post" string="Confirm" class="oe_highlight" type="object" groups="account.group_account_invoice" data-hotkey="v" attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'approve'), ('auto_post', '=', True), ('move_type', '!=', 'in_invoice'), ('display_inactive_currency_warning','=',True)]}"/>
        </xpath>

        <xpath expr="//button[@name='action_post'][2]" position="attributes">
          <!-- <button name="action_post" string="Post" class="oe_highlight" type="object" groups="account.group_account_invoice" data-hotkey="v" attrs="{'invisible': ['|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '!=', 'entry')]}"/>
          <button name="action_post" string="Confirm" class="oe_highlight" type="object" groups="account.group_account_invoice" data-hotkey="v" attrs="{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', '=', 'entry'), ('display_inactive_currency_warning','=',True)]}"/> -->
          <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'draft'), ('auto_post', '=', True), ('move_type', 'in', ['entry','in_invoice']), ('display_inactive_currency_warning','=',True)]}</attribute>
        </xpath>

        <xpath expr="//field[@name='state']" position="replace">
          <field name="state" widget="statusbar" statusbar_visible="draft,posted" attrs="{'invisible': [('move_type', '=', 'in_invoice')]}"/>
          <field name="state_bill" widget="statusbar" statusbar_visible="draft,approve,posted" attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}"/>
        </xpath>

        <!-- 
        <xpath expr="//button[@name='action_register_payment']" position="attributes">
          <attribute name="attrs">{'invisible': ['|', '|', ('state', '!=', 'approve'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}</attribute>
        </xpath>

        <xpath expr="//button[@name='action_reverse']" position="attributes">
          <attribute name="attrs">{'invisible': ['|', ('move_type', 'not in', ('out_invoice', 'in_invoice')), ('state', 'not in', ('posted','approve'))]}</attribute>
        </xpath> -->

      </field>
    </record>

  </data>


</odoo>
